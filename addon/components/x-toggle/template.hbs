{{#if hasBlock}}
  {{yield (hash
    switch=(component 'x-toggle-switch'
      disabled=disabled
      forId=forId
      name=name
      offLabel=offLabel
      onLabel=onLabel
      size=size
      sendToggle=(action 'sendToggle')
      theme=theme
      toggled=toggled
      value=value)
    offLabel=(component 'x-toggle-label'
      clickAction=(action 'sendToggle' false)
      label=offLabel
      show=showLabels
      switchId=forId
      value=false)
    onLabel=(component 'x-toggle-label'
      clickAction=(action 'sendToggle' true)
      label=onLabel
      show=showLabels
      switchId=forId
      value=true)
  )}}
{{else}}
  {{x-toggle-label
    clickAction=(action 'sendToggle' false)
    label=offLabel
    show=showLabels
    switchId=forId}}

  {{x-toggle-switch
    disabled=disabled
    forId=forId
    name=name
    offLabel=offLabel
    onLabel=onLabel
    sendToggle=(action 'sendToggle')
    size=size
    theme=theme
    toggled=toggled
    value=value}}

  {{x-toggle-label
    clickAction=(action 'sendToggle' true)
    label=onLabel
    show=showLabels
    switchId=forId}}
{{/if}}
