<input
  checked={{toggled}}
  disabled={{disabled}}
  class='x-toggle'
  id={{forId}}
  name={{name}}
  onchange={{action sendToggle value='target.checked'}}
  type='checkbox'>

<div id="x-toggle-visual-{{forId}}"
  class="x-toggle-btn {{themeClass}} {{size}}{{if disabled ' x-toggle-disabled'}}"
  data-tg-on={{onLabel}}
  data-tg-off={{offLabel}}
  for={{forId}}
  aria-role="checkbox"
  aria-owns={{forId}}>
</div>