<h1 id='title'>ember-toggle</h1>

<h2>Themes</h2>

<table>
  <tr>
    <td>{{x-toggle
      name=1
      theme='default'
      value=v1
      onToggle=(action (mut v1))
    }}</td>
    <td>default</td>
    <td>{{x-toggle name=2 theme='light' value=v2 onToggle=(action (mut v2))}}</td>
    <td>light</td>
  </tr>
