<h2>Disabled</h2>
<pre>
\{{x-toggle value=disabledTest disabled=true showLabels=true}}
</pre>
<span class='flexy'>
  {{x-toggle value=disabledTest disabled=true showLabels=true}}<br><br><br>
  value here: {{disabledTest}} &lt;== Won&#39;t change
</span>


<h2>Block Form</h2>
<pre>
\{{#x-toggle value=value showLabels=true onToggle=(action (mut value)) as |toggle|}}
  \{{#toggle.offLabel as |label|}}
    &lt;b&gt;\{{label}}&lt;/b&gt;
  \{{/toggle.offLabel}}

  \{{toggle.switch theme='flip' onLabel='diff on' offLabel='diff off'}}

  \{{#toggle.onLabel as |label|}}
    &lt;b&gt;\{{label}}&lt;/b&gt;
  \{{/toggle.onLabel}}
  \{{/x-toggle}}
</pre>
<span class='flexy'>
  {{#x-toggle value=value showLabels=true onToggle=(action (mut value)) as |toggle|}}
    {{#toggle.offLabel as |label|}}
      <b>{{label}}</b>
    {{/toggle.offLabel}}

    {{toggle.switch theme='flip' onLabel='diff on' offLabel='diff off'}}

    {{#toggle.onLabel as |label|}}
      <b>{{label}}</b>
    {{/toggle.onLabel}}
  {{/x-toggle}}
</span>

